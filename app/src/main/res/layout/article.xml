<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="10dp"
    android:paddingBottom="0dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/dummy_profile"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#000000"
                android:text="SangHyub Lee"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888"
                android:text="7월 20일 18:32"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="동해물과 백두산이 마르고 닳도록 하느님이 보우하사 우리나라 만세 hello world!\n 하이 ㅋㅋㅋ 반가워요"
        />
    <ImageView
        android:paddingTop="10dp"
        android:id="@+id/content_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/galaxy"/>

    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/info_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👍12"
            android:textColor="#000000"
            android:gravity="start"
            />
        <TextView
            android:id="@+id/info_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="댓글 3개 공유 1회 조회 32회"
            android:textColor="#000000"
            android:gravity="end"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/like_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="좋아요"
            android:textColor="#000000"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/comment_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="댓글 달기"
            android:gravity="center"/>
        <TextView
            android:id="@+id/share_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="공유하기"/>
    </LinearLayout>
</LinearLayout>
